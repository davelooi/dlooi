<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" href="#collapsePersonal">
        Personal Particulars <span class="caret"></span>
      </a>
    </h4>
  </div>
  <div id="collapsePersonal" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-bordered">
          <tr><td>DOB</td><td><%= u.dob.to_formatted_s(:rfc822) %></td></tr>
          <tr><td>Gender</td><td><%= u.gender %></td></tr>
        </table>
      </div>
    </div>
  </div>
</div>
