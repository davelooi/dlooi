<% page_heading "2048" %>
<div class="container">
  <div class="container">
    <div class="col-md-8">
      <h1><strong>2048</strong></h1>
    </div>
    <div class="col-md-2 score-text">
      <p>score</p>
      <p id="score"></p>
    </div>
  </div>
  <div class="container">
    <div id="gameDiv" class="col-md-8">
      <table class="table table-bordered">
        <tbody>
        <% (0..3).each do |row| %>
          <tr>
            <% (0..3).each do |col| %>
              <td id="t<%= "#{row}#{col}" %>"></td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="btn-group-vertical">
        <button type="button" class="btn btn-default" id="btnUp">
          <span class="glyphicon glyphicon-arrow-up"></span> Up
        </button>
        <button type="button" class="btn btn-default" id="btnDown">
          <span class="glyphicon glyphicon-arrow-down"></span> Down
        </button>
        <button type="button" class="btn btn-default" id="btnLeft">
          <span class="glyphicon glyphicon-arrow-left"></span> Left
        </button>
        <button type="button" class="btn btn-default" id="btnRight">
          <span class="glyphicon glyphicon-arrow-right"></span> Right
        </button>
      </div>
      <div class="btn-group-vertical">
        <button type="button" class="btn btn-primary" id="btnPlay">
          <span class="glyphicon glyphicon-play"></span> Reset
        </button>
      </div>
    </div>
  </div>
  <div class="container">
    <div id="status" class="status-text">
      <p id="gameOver"></p>
      <p id="gameWin"></p>
      <p id="gameLose"></p>
    </div>
  </div>
</div>
<%= javascript_include_tag "games/2048" %>
<%= stylesheet_link_tag    "2048" %>
